{
  "name": "airon",
  "version": "0.9.0-beta",
  "type": "module",
  "description": "Artificial Intelligence Remote Operations Node - Control Unity remotely via Claude.ai MCP",
  "main": "src/airon.js",
  "bin": {
    "airon": "src/airon.js"
  },
  "scripts": {
